@using Itsyazilim.Web.UI.Models
@model Itsyazilim.Web.UI.Models.PasswordRenewalViewModel

@{
    ViewBag.Title = "Şifre Yenileme";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br /><br />
@using (Html.BeginForm("PasswordRenewal", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="well no-padding" style="width: 400px; margin: 0px auto 0px auto;border-radius:0px; border:1px solid #aaa">
        <div class="smart-form client-form">
            <header>
                <h1 style="padding: 5px 5px 5px 19px">
                    <i class="fa fa-lock text-muted"></i>&nbsp;&nbsp;&nbsp;Şifre Yenileme<i class="fa fa-user fa-3x text-muted air air-top-right hidden-mobile" style="opacity: 0.2;
                                    margin-right: 20px"></i>
                </h1>
            </header>
        </div>
        <div id="PasswordRenewalForm" style="background-color:white">
            <div class="padding-10">
                <div class="padding-10">
                    Şifrenizi unuttunuz mu?<br />
                    E-posta adresinizi yazın ve yeni bir şifre oluşturun 
                    <br />
                    <br />
                    <div class="input-group">
                        <div class="input-group-addon">
                            <i class="icon-prepend fa fa-envelope" style="width: 15px"></i>
                        </div>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "E-posta", @Value = Request.QueryString["e"], @autofocus = "autofocus" })
                    </div>
                </div>
            </div>
        </div>
        <div class="smart-form no-padding">
            <footer style="text-align: right; padding-right: 20px">
                <div id="DivButton">
                    <input id="ButtonCheck" type="submit" class="btn btn-primary" onclick="return ShowLoading();" value="Şifremi Yenile" />
                    <i id="DivLoading" class="fa fa-gear fa-2x fa-spin txt-color-blue" style="display: none">
                    </i>
                </div>
            </footer>
        </div>
    </div>



    <script type="text/javascript">

        $('form').submit(function () {
            $('input[type=submit]').attr('disabled', 'disabled');
        });

        function ShowLoading() {

            if ($('#Email').val().length > 5) {
                $('#ButtonCheck').toggle(150);
                $('#DivLoading').toggle(100);
                return true;
            }
            else {
                $('#Email').focus();
                return false;
            }
        }

    </script>
}

