@using Itsyazilim.Web.Domain.Resources;
<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title |  @ItsyazilimWebResources.lblltsyazilimCom</title>
    <link rel="shortcut icon" href="~/Content/Images/favicon.ico" type="image/x-icon" />
    <link rel="icon" href="~/Content/Images/favicon.ico" type="image/x-icon" />
    @Styles.Render("~/Content/Styles/smartadmin-production.min.css")
    @Styles.Render("~/Content/Styles/bootstrap.css")
    @Styles.Render("~/Content/Styles/AwesomeIcons.css")
    @Styles.Render("~/Content/Styles/GlyphIcons.css")
    @Styles.Render("~/Content/Styles/_Default.css")
</head>
<body>

    <div style="height:100px; padding-top:10px">
        <table style="width:1100px; margin:0px auto 0px auto; height:100%">
            <tr>
                <td style="width:60px">
                    <a href="~/" style="text-decoration:none">
                        <img src="~/Content/Images/Logo/Logo-25.png" style="margin-top:4px; height:20px" /></a>
                    </td>
                <td>

                    <a href="~/" style="text-decoration:none">
                        <span style="color: rgb(63, 63, 63); font-size: xx-large;">@ItsyazilimWebResources.lblLTS</span>
                        <span style=" color: rgb(127, 127, 127); font-size: xx-large;">@ItsyazilimWebResources.lblTubitik</span>
                    </a>
                </td>
                <td style="text-align:right; padding-right:15px">

                    <a href="~/Account/Register" class="btn btn-info btn-lg">@ItsyazilimWebResources.lblSignUpNow</a>
                </td>
            </tr>
        </table>
    </div>
   
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)


    
        @RenderBody()
    

</body>
</html>
